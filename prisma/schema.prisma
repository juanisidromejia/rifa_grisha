generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma" // Removed this line
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

// User Model
model User {
  id                      String    @id @default(uuid())
  email                   String    @unique
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt
  status                  String    @default("email_pending_verification") // New default status
  emailVerificationCode   String?   // Store the 6-digit code for email verification
  emailVerificationExpires DateTime? // Expiration time for the verification code
  raffleNumbers           String[]  @default([])
  raffleLinkSent          Boolean   @default(false) // Track if the link to get raffle numbers has been sent

  @@map("users")
}
